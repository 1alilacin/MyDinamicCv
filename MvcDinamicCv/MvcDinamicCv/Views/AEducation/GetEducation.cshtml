
@{
    ViewData["Title"] = "GetEducation";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model EntitiyLayer.Concrete.Education
@{
    ViewData["Title"] = "AddEducation";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<br />
<h4>Eğitim Bilgisi Düzenleme Sayfası</h4>
<br />
<br />
<div class="table table-bordered">
    <form method="post">
          @Html.Label("Başlık")
          @Html.TextBoxFor(x=>x.Title,new {@class="form-control"})
          @Html.ValidationMessageFor(x=>x.Title,"", new {@style="color:red"})
          <br />
          @Html.Label("Alt Başlık 1")
          @Html.TextBoxFor(x=>x.Subtitle1,new{@class="form-control"})
          <br />
          @Html.Label("Alt Başlık 2")
          @Html.TextBoxFor(x=>x.Subtitle2,new{@class="form-control"})
          <br />
          @Html.Label("Tarih")
          @Html.TextBoxFor(x=>x.Date,new{@class="form-control"})
          <br />
          @Html.Label("Genel Not Ortalaması")
          @Html.TextBoxFor(x=>x.GNO,new{@class="form-control"})
          @Html.ValidationMessageFor(x=>x.GNO,"", new {@style="color:red"})
          <br />

         <button class="btn btn-success"> Güncelle </button>

    </form>
</div>





