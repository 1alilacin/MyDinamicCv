@using EntitiyLayer.Concrete
@model List<Certificate>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
            <section class="content">
                <div class="container-fluid">
                    <div class="row">
                        
                        <!-- /.col -->
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-header p-2">
                                    
                                </div><!-- /.card-header -->
                                <div class="card-body">
                                                 
                                        <div class="tab-pane" id="timeline">
                                            <!-- The timeline -->
                                            <div class="timeline timeline-inverse">
                                                <!-- timeline time label -->
                                                @foreach(var item in Model)
                                                {
                                                
                                               @* <div class="time-label">
                                                    <span class="bg-success">
                                                        10 Feb. 2014
                                                    </span>
                                                </div>*@
                                                <!-- /.timeline-label -->
                                                <!-- timeline item -->
                                                <div>
                                                    <i class="fas fa-comment bg-primary"></i>
                                                    <div class="timeline-item">
                                                        <div class="timeline-body">
                                                           @item.Description
                                                        </div>
                                                        <div class="timeline-footer">
                                                            <a href="/ACertificate/UpdateCertificate/@item.ID" class="btn btn-primary btn-sm">Düzenle</a>
                                                            <a href="/ACertificate/DeleteCertificate/@item.ID" class="btn btn-danger btn-sm">Sil</a>
                                                        </div>
                                                    </div>
                                                </div>
                                                }
                                               
                                            </div>
                                            <a href="/ACertificate/AddCertificate/" class="btn btn-info btn-sm">Yeni Sertifika Ekle</a>
                                        </div>
                                    </div>
                                    <!-- /.tab-content -->
                                </div><!-- /.card-body -->
                            </div>
                            <!-- /.nav-tabs-custom -->
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- /.row -->
            </section>
</body>
</html>

